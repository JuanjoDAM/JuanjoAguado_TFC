<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/buttonRegistrarHoras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrar Horas"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/buttonBajasVacaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bajas y Vacaciones"
        android:layout_below="@id/buttonRegistrarHoras"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/buttonNominas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NÃ³minas"
        android:layout_below="@id/buttonBajasVacaciones"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/buttonNominas"
        android:layout_marginTop="16dp"/>
</RelativeLayout>










