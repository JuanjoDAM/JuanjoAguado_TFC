<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminActivity">

    <Button
        android:id="@+id/buttonSeleccionarEmpleado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subir Nomina"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/buttonVerSolicitudes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver Solicitudes"
        android:layout_below="@id/buttonSeleccionarEmpleado"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/buttonVerUsuarios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver Datos Personales"
        android:layout_below="@id/buttonVerSolicitudes"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>
</RelativeLayout>


